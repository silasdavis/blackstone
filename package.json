{
  "name": "agreements-network-api",
  "version": "0.5.0",
  "description": "Foundation smart contracts and API for the Agreements Network",
  "main": "api/app.js",
  "scripts": {
    "start": "node -e 'require(\"./api/app.js\")()'",
    "start:dev": "npm run-script db:migrate:up:dev && node -e 'require(\"./api/app.js\")()'",
    "start:debug": "npm run-script db:migrate:up:dev && node --inspect=0.0.0.0:9222 -e 'require(\"./api/app.js\")()'",
    "start:debug:cluster": "node --inspect=0.0.0.0:9222 -e 'require(\"./api/app.js\")()'",
    "test": "npm run-script db:migrate:up:dev && npm run-script test:contracts && npm run-script test:contracts:fe && npm run-script test:parser && npm run-script test:api && npm run-script test:api:bpm",
    "test:api": "npm run-script db:migrate:up:dev && mocha --exit ./api/test/api/web-api-test.js --timeout 99999999",
    "test:api:debug": "npm run-script db:migrate:up:dev && mocha --exit ./api/test/api/web-api-test.js --inspect=0.0.0.0:9222 --timeout 99999999",
    "test:api:bpm": "npm run-script db:migrate:up:dev && mocha --exit ./api/test/api/web-api-bpm-test.js --timeout 99999999",
    "test:api:bpm:debug": "npm run-script db:migrate:up:dev && mocha --exit ./api/test/api/web-api-bpm-test.js --inspect=0.0.0.0:9222 --timeout 99999999",
    "test:contracts": "mocha --exit ./api/test/controllers/contracts-test.js --timeout 99999999",
    "test:contracts:debug": "mocha --exit ./api/test/controllers/contracts-test.js --inspect=0.0.0.0:9222 --timeout 99999999",
    "test:contracts:fe": "mocha --exit ./api/test/controllers/form-exec-usertask-test.js --timeout 99999999",
    "test:contracts:fe:debug": "mocha --exit ./api/test/controllers/form-exec-usertask-test.js --inspect=0.0.0.0:9222 --timeout 99999999",
    "test:parser": "mocha --exit ./api/test/parser/parser-test.js --timeout 99999999",
    "test:parser:debug": "mocha --exit ./api/test/parser/parser-test.js --inspect=0.0.0.0:9222 --timeout 99999999",
    "db:migrate:up": "node node_modules/db-migrate/bin/db-migrate up -e prod",
    "db:migrate:up:dev": "node node_modules/db-migrate/bin/db-migrate up",
    "db:migrate:up:dev:cluster": "node node_modules/db-migrate/bin/db-migrate up -e cluster",
    "db:migrate:create": "node node_modules/db-migrate/bin/db-migrate create",
    "migrate-users": "node scripts/migrateUsers.js"
  },
  "license": "SEE LICENSE IN LICENSE.md",
  "dependencies": {
    "@monax/burrow": "^0.20.8",
    "@sendgrid/mail": "^6.2.1",
    "async": "^2.1.4",
    "bcryptjs": "^2.4.3",
    "binstring": "^0.2.1",
    "body-parser": "^1.18.3",
    "boom": "^7.2.0",
    "bpmn-moddle": "^5.1.5",
    "cookie-parser": "^1.4.3",
    "csvtojson": "^2.0.8",
    "db-migrate": "^0.11.1",
    "db-migrate-pg": "^0.4.0",
    "esm": "^3.0.34",
    "express": "^4.13.4",
    "express-healthcheck": "^0.1.0",
    "express-jwt": "^5.3.0",
    "format": "^0.2.2",
    "grpc": "^1.11.3",
    "helmet": "^3.12.1",
    "iteray": "^0.5.1",
    "joi": "^13.4.0",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "log4js": "^3.0.5",
    "multer": "^1.3.0",
    "node-file-hash": "^1.0.1",
    "npm": "^6.4.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pg": "^7.4.3",
    "ramda": "^0.23.0",
    "sqlite3": "^4.0.2",
    "toml": "2.3.0",
    "util": "^0.10.3",
    "xml2js": "^0.4.19"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.0",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "mocha": "^5.2.0",
    "random-id": "0.0.2",
    "supertest": "^3.1.0"
  },
  "engines": {
    "node": "^9.5.0",
    "npm": "^5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agreements-network/blackstone.git"
  },
  "bugs": {
    "url": "https://github.com/agreements-network/blackstone/issues"
  },
  "homepage": "https://agreements.network"
}
